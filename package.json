{
    "name": "@excli/docker",
    "version": "1.0.0",
    "type": "module",
    "types": "dist/index.d.mts",
    "main": "dist/index.mjs",
    "description": "A CLI tool for generating Docker configurations for JavaScript and TypeScript projects with customizable package managers and databases.",
    "scripts": {
        "build": "tsdown",
        "dev": "tsx watch src/index.ts",
        "format": "prettier --write .",
        "start": "node dist/index.mjs",
        "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
        "prepublishOnly": "npm run build",
        "prepare": "husky"
    },
    "keywords": [
        "@excli/express",
        "@excli/docker",
        "docker",
        "dockerfile",
        "docker-compose",
        "cli",
        "typescript",
        "javascript",
        "generator",
        "database",
        "devops"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "bin": {
        "excli-docker": "./dist/index.mjs"
    },
    "author": "Noman <pxycknomdictator@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^25.0.6",
        "@types/yargs": "^17.0.35",
        "husky": "^9.1.7",
        "prettier": "^3.7.4",
        "tsdown": "^0.19.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "yargs": "^18.0.0"
    }
}
